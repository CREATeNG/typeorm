{
    "version": "2.1.1",
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "outDir": "build/compiled",
        "target": "esnext",
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "plugins": [
          {
            "name": "typescript-deno-plugin"
          }
        ]
    },
    "exclude": [
        "tmp",
        "temp",
        "build",
        "node_modules"
    ]
}
